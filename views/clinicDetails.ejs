<%-include("./partials/nav.ejs")%>


<div class="container container-fluid">
    <div class="album py-5 bg-light">
        <div class="container">
          <div class="row justify-content-between pl-5 pr-5">
                <div class="col-lg-12 p-5">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top"  style="height: 50%; width: 100%; display: block;" src=<%=clinic.cover_img%>>
                        <div class="card-body">
                            <h5><%=clinic.title%></h5>
                            <p class="card-text"><%=clinic.description%></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/appointment?title=<%=clinic.title%>" class="btn btn-lg btn-outline-secondary">Get Appointment!</a>
                                </div>
                                <small class="text-muted"><%=clinic.address%></small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
</div>