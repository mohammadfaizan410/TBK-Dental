<%-include("./partials/nav.ejs")%>

<div class="container container-fluid dashboard-wrapper">
    <div class="row mt-4">
        <div class="col-12 mt-2 mb-5"><h1 class="text-center dashboard-title"><%=user.username%>'s dashboard</h1></div>
        <div class="col-lg-12 p-3 border shadow text-center" id="appointments">
            <div class="mb-5">My appointments (<%=result.length%>)</div>
            <div class="direction pb-5"><i class="fa-solid fa-arrow-down"></i></div>
            <div class="collapse" id="appt-container">
                <%if(result.length === 0){%>
                    <div class="row">
                        <div class="col-lg-12">Your have no appointments!</div>
                    </div>
                <%}%>
                <%for(const appt of result){%>
                    <div class="row">
                        <div class="col-lg-4"><%=appt.date%></div>
                        <div class="col-lg-4"><%=appt.patient%></div>
                        <div class="col-lg-4"><%=appt.status%></div>
                    </div>
                    <br><br>
                    <%}%>
                </div>
        </div>
    </div>
    <script src="/public/scripts/script.js"></script>
</div>
