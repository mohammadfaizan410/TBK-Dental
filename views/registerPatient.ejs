<%-include("./partials/header.ejs")%>
    <div class="register-main">
    </div>
    <form action="/registerPatient" method="POST">
        <div class="form-container container-fluid shadow p-5">
            <h1 class="text-center pb-3">Register</h1>
            <h3 style="color: red;"><%=exists ? exists : ""%></h3>
            <input required type="text" placeholder="First Name" class="form-control p-3 mb-3" name="firstName">
            <input required type="text" placeholder="Last Name" class="form-control p-3 mb-3" name="lastName">
            <input required type="email" placeholder="jhondoe@gmail.com" class="form-control p-3 mb-3" name="email">
            <input required type="username" placeholder="username" class="form-control p-3 mb-3" name="username">
            <input required type="password" placeholder="Password" class="form-control p-3 mb-3" name="password">
            <h5 class="p-2 mb-3">Fotoğraf Yükle:</h5> 
            <input type="file" class="p-3 mb-3" name="img">
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </div>
        </div>
    </form>